{
  "compilerOptions": {
    "baseUrl"         : "./src",
    "outDir"          : "./dist",
    "allowJs"         : false,
    "noImplicitAny"   : false,
    "sourceMap"       : true,
    "target"          : "es6",
    "moduleResolution": "Node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "lib"             : [
      "dom",
      "es5",
      "es6",
      "es2016",
      "es2015.promise",
      "es2015.iterable",
      "es2017.object"
    ]
  },
  "include"        : [
    "./src/**/*"
  ]
}
